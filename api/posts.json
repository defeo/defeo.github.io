{
{% for post in site.posts %}
 "{{post.path}}": {
  "id" : "{{post.id}}"
  "title" : "{{post.title}}",
  "url" : "{{post.url}}",
  "date" : "{{post.date}}",
  "categories" : [{% for c in post.categories %}"{{ c }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
  "tags" : [{% for t in post.tags %}"{{ t }}"{% unless forloop.last %},{% endunless %}{% endfor %}]
 }{% unless forloop.last %},{% endunless %}
{% endfor %}
}
